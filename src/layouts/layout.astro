---
import Header from "../components/header.astro"
import BottomHome from "../components/bottom-menu.astro"
const { title } = Astro.props;
import { ClientRouter } from 'astro:transitions';
import { pwaInfo } from 'virtual:pwa-info';

// CORRECCIÓN 1: Importar el CSS de forma relativa correctamente
import '../styles/global.css'; 
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="icon" type="image/x-icon" href="/favicon.png">
    <link rel="apple-touch-icon" href="/pwa-512x512.png" />
    <meta name="apple-mobile-web-app-title" content="EazyPeazy">
    <meta name="mobile-web-app-capable" content="yes">
    { pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> }
    <title>{title}</title>
    <ClientRouter />
</head>
<body>
    <Header />
    <main class="my-[9dvh] py-5">
        <slot></slot>
    </main>
    <BottomHome />

    <script>
        // Astro procesará este import y lo incluirá en el paquete final
        import { initFlowbite } from 'flowbite';

        document.addEventListener('astro:page-load', () => {
            initFlowbite();
        });

        import { registerSW } from 'virtual:pwa-register';

        registerSW({
            immediate: true,
            onRegisteredSW(swScriptUrl) {
                console.log('SW registrado:', swScriptUrl);
            },
            onOfflineReady() {
                console.log('La app está lista para trabajar offline');
            },
        });
    </script>
</body>
</html>